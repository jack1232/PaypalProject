@page
@model PaypalProject.PlanActivateModel
@{
    ViewData["Title"] = "Activate and Deactivate Plan";
}

<h1>@ViewData["Title"]</h1>

<br />
<form method="post" asp-page-handler="">
    <div class="form-group form-inline">
        <label class="control-label">Status:</label>
        <input class="form-control ml-2" type="text" asp-for="@Model.Status" style="width:100px" />
        <button type="submit" class="btn btn-primary btn-sm ml-2">Change Plan Status</button>
    </div>
    @if (Model.Result != null)
    {
        <p>Original Status: @Model.OriginalStatus, Current Status: @Model.Status</p>
        <textarea style="width:100%;height:100px">@Model.Result</textarea>
    }
</form>

